    <!--</RelativeLayout>-->
    <ImageView
        android:id="@+id/send_invite_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:src="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/invite_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/send_invite_img"
        android:layout_toRightOf="@+id/user_invite_img"
        android:paddingLeft="20dp"
        android:text="User Name"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/invite_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_user_name"
        android:layout_toRightOf="@+id/user_invite_img"
        android:paddingLeft="20dp"
        android:text="Status"
        android:textAppearance="?android:textAppearanceSmall" />
</RelativeLayout>